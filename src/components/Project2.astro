---
import Tailwind from "./tools/Tailwind.astro";
import Firebase from "./tools/Firebase.astro";
import Svelte from "./tools/Svelte.astro";
import Socials from "./Socials.astro";
import Live from "./Live.astro";
---

<!-- TODO: add interactive, sound icons and labels bottom left of card -->
<section
  class="relative min-h-screen w-full bg-gradient-to-b from-[#121212] via-black to-black"
>
  <div
    class="absolute left-96 top-12 h-96 w-96 rounded-full bg-pink-400 opacity-30"
  >
  </div>
  <div
    class="absolute left-96 top-96 h-96 w-96 rounded-full bg-emerald-400 opacity-30"
  >
  </div>
  <div
    class="absolute bottom-96 right-96 h-96 w-96 rounded-full bg-orange-400 opacity-30"
  >
  </div>
  <div
    class="absolute bottom-12 right-96 h-96 w-96 rounded-full bg-purple-400 opacity-30"
  >
  </div>
  <div
    class="z-10 flex justify-between backdrop-blur-3xl portrait:flex-col landscape:items-center"
  >
    <div class="relative p-12 landscape:h-screen">
      <div
        class="left-4 top-4 flex min-w-max flex-col items-start gap-4 lg:left-12 lg:top-12 xl:left-24 xl:top-24 landscape:absolute"
      >
        <h1 class="text-3xl font-bold md:text-5xl">RealZoo</h1>
        <div class="flex gap-2">
          <h2
            class="rounded-full border border-red-300 bg-red-500 bg-opacity-50 px-2"
          >
            Live
          </h2>
          <h2
            class="rounded-full border border-emerald-300 bg-emerald-500 bg-opacity-50 px-2"
          >
            Completed
          </h2>
        </div>
        <h3 class="opacity-50">A really fun game.</h3>
        <div class="flex gap-4">
          <Svelte />
          <Firebase />
          <Tailwind />
        </div>
      </div>
    </div>
    <!-- middle -->
    <div
      class="relative mx-auto flex h-[90dvh] w-[90dvh] items-center gap-4 rounded-full portrait:h-[90dvw] portrait:w-[90dvw]"
      style="box-shadow: 0 0 5rem -1rem #fff4"
    >
      <div class="flex w-1/4 flex-col justify-center gap-4">
        <div class="hoverer group rounded-2xl duration-300">
          <img
            class="pointer-events-none h-auto max-w-full rounded-2xl border border-neutral-800 duration-500 group-hover:translate-x-[160%] group-hover:scale-150"
            alt="RealZoo Home Page Mobile"
            src="/rz_mobile_main.png"
          />
        </div>
      </div>
      <div class="flex w-2/4 flex-col items-center gap-4">
        <div class="hoverer group w-2/3 rounded-2xl duration-300">
          <img
            class="pointer-events-none rounded-xl border border-neutral-800 duration-500 group-hover:translate-x-[50%] group-hover:translate-y-[115%] group-hover:scale-150"
            alt="RealZoo Roadmap Page"
            src="/rz_roadmap.png"
          />
        </div>
        <div class="hoverer group relative rounded-2xl duration-500">
          <img
            class="h-auto max-w-full rounded-2xl border border-neutral-800 duration-300 group-hover:scale-[2]"
            alt="RealZoo Home Page"
            src="/rz_main.png"
          />
          <div
            class="absolute bottom-2 left-2 flex items-center rounded-full bg-[#ff4444] pr-2 text-xs font-bold duration-1000 group-hover:opacity-0 group-hover:duration-0"
          >
            <Live /> Live
          </div>
          <iframe
            height="1080px"
            width="1920px"
            class="absolute left-1/2 top-1/2 -translate-x-1/2 -translate-y-1/2 scale-[0.21] rounded-[4rem] border-8 border-neutral-800 opacity-0 duration-300 group-hover:scale-50 group-hover:opacity-100"
            src="https://realzoo.itsyipy.com/"
            title="RealZoo"></iframe>
        </div>
        <div class="flex max-w-full gap-4">
          <div class="hoverer group w-2/3 rounded-2xl duration-300">
            <img
              class="pointer-events-none h-auto max-w-full rounded-2xl border border-neutral-800 duration-500 group-hover:-translate-y-[110%] group-hover:translate-x-[30%] group-hover:scale-[2.5]"
              alt="RealZoo Redesign Reaction"
              src="/rz_poggers.png"
            />
          </div>
          <div class="hoverer group w-1/3 rounded-xl duration-300">
            <img
              class="pointer-events-none h-auto max-w-full rounded-xl border border-neutral-800 duration-500 group-hover:-translate-x-[100%] group-hover:-translate-y-[110%] group-hover:scale-[2.5]"
              alt="RealZoo Breeding Popup"
              src="/rz_funni.png"
            />
          </div>
        </div>
      </div>

      <div class="flex w-1/4 flex-col justify-center gap-4">
        <div class="hoverer group rounded-2xl duration-300">
          <img
            class="pointer-events-none h-auto max-w-full rounded-2xl border border-neutral-800 duration-500 group-hover:-translate-x-[160%] group-hover:scale-150"
            alt="Return YouTube Dislike Links Page Mobile"
            src="/rz_mobile_roadmap.png"
          />
        </div>
      </div>
    </div>

    <div class="flex justify-start p-12 landscape:h-screen">
      <div class="bottom-24 left-24 landscape:absolute">
        <Socials
          discord="https://discord.com/invite/B9HZVcWCau"
          youtube="https://www.youtube.com/@realzoogame"
          tiktok="https://www.tiktok.com/@realzoogame"
          twitter="https://twitter.com/RealZooGame"
          link="https://realzoo.itsyipy.com"
        />
      </div>
    </div>
  </div>
</section>

<style>
  .hoverer {
    box-shadow: 0 0 0 100dvw rgba(0, 0, 0, 0);
    /* duration-0 */
    transition: box-shadow 0s ease-in-out !important;
  }
  .hoverer:hover {
    z-index: 1;
    /* hover:duration-500 */
    transition: box-shadow 0.25s ease-in-out !important;
    box-shadow: 0 0 0 100dvw rgba(0, 0, 0, 0.5);
  }
</style>
