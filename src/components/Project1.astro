---
import Vuetify from "./tools/Vuetify.astro";
import Socials from "./Socials.astro";
import Nuxt from "./tools/Nuxt.astro";
import Live from "./Live.astro";
---

<!-- TODO: cleanup, separate socials into component with props --><!-- add interactive, sound icons and labels bottom left of card -->
<section
  class="relative flex min-h-screen w-full justify-between bg-[#121212] portrait:flex-col landscape:items-center"
>
  <div class="relative p-12 landscape:h-screen">
    <div
      class="left-4 top-4 flex min-w-max flex-col items-start gap-4 lg:left-12 lg:top-12 xl:left-24 xl:top-24 landscape:absolute"
    >
      <h1 class="text-3xl font-bold md:text-5xl">
        Return YouTube <br /> Dislike
      </h1>
      <h3 class="opacity-50">
        Browser extension and website <br /> for API that shows you <br /> dislikes
        on Youtube
      </h3>
      <div class="flex gap-4">
        <Nuxt />
        <Vuetify />
      </div>
    </div>
  </div>
  <!-- middle -->
  <div
    class="relative mx-auto flex h-[90dvh] w-[90dvh] items-center gap-4 rounded-full bg-[#f222] portrait:h-[90dvw] portrait:w-[90dvw]"
    style="box-shadow: 0 0 15rem 3rem #f222, inset -15rem -15rem 15rem 0 #0008, inset 12rem 12rem 0 #fff8"
  >
    <!-- inset 9rem -9rem rgb(53, 7, 7), inset 10rem -10rem 0 #222, inset 10.5rem -10.5rem 0 #f44, inset 12rem -12rem 0 #222, inset 12.5rem -12.5rem 0 #f44, inset 14rem -14rem 0 #222, inset 14.5rem -14.5rem 0 #f44, inset 16rem -16rem 0 #222, inset 16.5rem -16.5rem 0 #f44, inset 18rem -18rem 0 #222, inset 18.5rem -18.5rem 0 #f44, inset 20rem -20rem 0 #222, inset 20.5rem -20.5rem 0 #f44, inset 22rem -22rem 0 #222, inset 22.5rem -22.5rem 0 #f44, inset 24rem -24rem 0 #222, inset 24.5rem -24.5rem 0 #f44, inset 26rem -26rem 0 #222, inset 26.5rem -26.5rem 0 #f44, inset 28rem -28rem 0 #222, inset 28.5rem -28.5rem 0 #f44, inset 200rem -200rem 0 #222 -->
    <div class="flex w-1/4 flex-col justify-center gap-4">
      <div class="hoverer group rounded-2xl duration-300">
        <img
          class="pointer-events-none h-auto max-w-full rounded-2xl border border-neutral-800 duration-500 group-hover:translate-x-[160%] group-hover:scale-150"
          alt="Return YouTube Dislike Home Page Mobile"
          src="/ryd_home_mobile.png"
        />
      </div>
    </div>
    <div class="flex w-2/4 flex-col items-center gap-4">
      <div class="flex max-w-full gap-4">
        <div class="hoverer group rounded-2xl duration-300">
          <img
            class="pointer-events-none rounded-xl border border-neutral-800 duration-500 group-hover:translate-x-[50%] group-hover:translate-y-[115%] group-hover:scale-150"
            alt="Return YouTube Dislike Extension Popup"
            src="/ryd_panel_main.png"
          />
        </div>
        <div class="hoverer group rounded-2xl duration-300">
          <img
            class="pointer-events-none rounded-xl border border-neutral-800 duration-500 group-hover:-translate-x-[50%] group-hover:translate-y-[115%] group-hover:scale-150"
            alt="Return YouTube Dislike Extension Settings Popup"
            src="/ryd_panel_settings.png"
          />
        </div>
      </div>
      <div class="hoverer group relative rounded-2xl duration-500">
        <img
          class="h-auto max-w-full rounded-2xl border border-neutral-800 duration-300 group-hover:scale-[2]"
          alt="Return YouTube Dislike Home Page"
          src="/ryd_main.png"
        />
        <div
          class="absolute left-2 top-2 flex items-center rounded-full bg-[#ff4444] pr-2 text-xs font-bold duration-1000 group-hover:opacity-0 group-hover:duration-0"
        >
          <Live /> Live
        </div>
        <iframe
          height="1080px"
          width="1920px"
          class="absolute left-1/2 top-1/2 -translate-x-1/2 -translate-y-1/2 scale-[0.21] rounded-[4rem] border-8 border-neutral-800 opacity-0 duration-300 group-hover:scale-50 group-hover:opacity-100"
          src="https://returnyoutubedislike.com/"
          title="Return YouTube Dislike"></iframe>
      </div>
      <div class="flex max-w-full gap-4">
        <div class="hoverer group w-2/3 rounded-2xl duration-300">
          <img
            class="pointer-events-none h-auto max-w-full rounded-2xl border border-neutral-800 duration-500 group-hover:-translate-y-[110%] group-hover:translate-x-[30%] group-hover:scale-[2.5]"
            alt="Return YouTube Dislike Extension Changelog Page"
            src="/ryd_changelog.png"
          />
        </div>
        <div class="hoverer group w-1/3 rounded-xl duration-300">
          <img
            class="pointer-events-none h-auto max-w-full rounded-xl border border-neutral-800 duration-500 group-hover:-translate-x-[100%] group-hover:-translate-y-[110%] group-hover:scale-[2.5]"
            alt="Return YouTube Dislike Extension Popup ColorPicker"
            src="/ryd_panel_colorpicker.png"
          />
        </div>
      </div>
    </div>

    <div class="flex w-1/4 flex-col justify-center gap-4">
      <div class="hoverer group rounded-2xl duration-300">
        <img
          class="pointer-events-none h-auto max-w-full rounded-2xl border border-neutral-800 duration-500 group-hover:-translate-x-[160%] group-hover:scale-150"
          alt="Return YouTube Dislike Links Page Mobile"
          src="/ryd_links_mobile.png"
        />
      </div>
    </div>
  </div>

  <div class="flex justify-start p-12 landscape:h-screen">
    <!-- socials -->
    <div class="bottom-24 left-24 landscape:absolute">
      <Socials
        github="https://github.com/Anarios/return-youtube-dislike"
        link="https://returnyoutubedislike.com"
      />
    </div>
  </div>
</section>

<style>
  .hoverer {
    box-shadow: 0 0 0 100dvw rgba(0, 0, 0, 0);
    /* duration-0 */
    transition: box-shadow 0s ease-in-out !important;
  }
  .hoverer:hover {
    z-index: 1;
    /* hover:duration-500 */
    transition: box-shadow 0.25s ease-in-out !important;
    box-shadow: 0 0 0 100dvw rgba(0, 0, 0, 0.5);
  }
</style>
