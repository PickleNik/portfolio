  <div
    slot="aftertitle"
    class="flex h-full w-full flex-col items-center justify-center text-neutral-400"
  >
    <div class="relative w-full skew-y-12 md:-mt-20 md:ml-auto md:w-1/2">
      <div
        class="relative flex snap-x snap-mandatory flex-row-reverse gap-4 overflow-x-auto rounded-l-3xl px-24 py-8"
      >
        <div class="flex snap-center flex-col gap-4">
          <b
            class="-mb-2 flex max-w-min items-center bg-gradient-to-r from-indigo-400 from-35% via-pink-400 to-orange-400 bg-clip-text pl-2 text-xl font-bold text-transparent"
          >
            <svg
              fill="currentColor"
              viewBox="4 4 48 48"
              class="inline-block text-indigo-400"
              xmlns="http://www.w3.org/2000/svg"
              height="20"
              width="20"
            >
              <path
                d="m19.2 36.4-4.75-10.45L4 21.2l10.45-4.75L19.2 6l4.75 10.45L34.4 21.2l-10.45 4.75ZM36.4 42l-2.35-5.25-5.25-2.35 5.25-2.4 2.35-5.2 2.4 5.2 5.2 2.4-5.2 2.35Z"
              ></path>
